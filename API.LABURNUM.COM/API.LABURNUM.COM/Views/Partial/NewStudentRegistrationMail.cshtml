@model DTO.LABURNUM.COM.StudentModel


<table width="600" class="bodyTable">
    <tbody>
        <tr style="background-color: #186a40; min-height: 88px; text-align: center;">
            <td>
                <img src="@API.LABURNUM.COM.Component.Constants.URL.WEBAPIURLWITHOUTSLASH/Images/logo.png" alt="LABURNUM PUBLIC SCHOOL" style="width:60px;height:60px;"/></td>
        </tr>
        <tr style="text-align: left;">
            <td style="padding-top: 15px; line-height: 1.4em;">Dear <strong>@Model.FatherName ,</strong>
