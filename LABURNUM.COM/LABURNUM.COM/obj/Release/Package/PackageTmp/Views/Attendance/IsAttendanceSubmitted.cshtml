@model DTO.LABURNUM.COM.AttendanceReporting.AttendanceReportResponseModel

@{int counter = 0;}
<div class="row">
    <div class="col-md-12">
        <!--breadcrumbs start -->
        <ul class="breadcrumb">
            <li><a href="@LABURNUM.COM.Component.Constants.URL.WEBSITEURLWITHOUTSLASH/Dashboard/Index"><i class="fa fa-home"></i>Home</a></li>
            <li>Attendance</li>
            <li class="active">Submit Morning Today Attendance</li>
        </ul>
        <!--breadcrumbs end -->
    </div>
</div>

<section class="panel">
    <header class="panel-heading">
        Today Attendance Already Submitted
    </header>
    <header class="panel-heading">
        Morning Attendance Submitted At : @Model.MorningAttendanceSubmitDateTime
        @* <br />
        AfterLunch Attendance Submitted At : @Model.LunchAttendanceSubmitDateTime*@
        <span class="tools pull-right">
            <button type="button" onclick="DownloadRecord('Today(s) Attendance List');" class="btn btn-primary adept-view">Download <i class="fa fa-download" aria-hidden="true"></i></button>
        </span>
    </header>
    <div class="row" id="divTable">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-hover general-table responsive">
                    <thead>
                        <tr>
                            <th>S.No.</th>
                            <th>Student Name</th>
                            <th>Father Name</th>
                            <th>Morning Attendance</th>
                            <th>After Lunch Attendance</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (DTO.LABURNUM.COM.AttendanceReporting.StudentAttendance student in Model.StudentList)
                        {
                            <tr>
                                <td style="width: 17%;">@(counter + 1)</td>
                                <td width="20%">@student.StudentName</td>
                                <td width="20%">@student.FatherName</td>
                                @foreach (DTO.LABURNUM.COM.AttendanceReporting.DayWiseAttendance item in student.AttendanceList)
                                {
                                    if (item.IsPresentAtMorning)
                                    {
                                    <td width="20%">Present</td>
                                    }
                                    else
                                    {
                                    <td width="20%">Absent</td>
                                    }
                                    if (item.IsPresentAtAfterLunch)
                                    {
                                    <td width="20%">Present</td>
                                    }
                                    else
                                    {
                                    <td width="20%">Absent</td>
                                    }
                                }
                            </tr>
                                counter++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
