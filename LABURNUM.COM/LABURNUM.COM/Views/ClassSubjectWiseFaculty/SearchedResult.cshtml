@model List<DTO.LABURNUM.COM.ClassSubjectFacultyTableModel>

@{int counter = 1;}
@if (Model.Count == 0)
{
    <section class="panel text-center" style="margin-top: 10px;">
        <div class="row">
            <img src="@LABURNUM.COM.Component.Constants.URL.WEBSITEURLWITHOUTSLASH/Images/no-record-found.png" />
        </div>
    </section>
}
else
{
    <section class="panel" style="margin-top: 10px;">
        <header class="panel-heading">
            <strong>Number of Record Found : @Model.Count</strong>
            <span class="tools pull-right">
                <button type="button" onclick="DownloadRecord('Class Subject Wise Faculties');" class="btn btn-primary adept-view">Download <i class="fa fa-download" aria-hidden="true"></i></button>
            </span>
        </header>
        <div id="divTable">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table class="table table-hover general-table responsive">
                        <thead>
                            <tr>
                                <th>S.No.</th>
                                <th>Class</th>
                                <th>Section</th>
                                <th>Subject</th>
                                <th>Faculty Name</th>
                                <th>Contact No.</th>
                                <th>Assigned Date</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (DTO.LABURNUM.COM.ClassSubjectFacultyTableModel item in @Model)
                            {
                                <tr>
                                    <td style="width: 12%;">@counter</td>
                                    <td style="width: 14%;">@item.ClassName</td>
                                    <td style="width: 12%;">@item.SectionName</td>
                                    <td style="width: 13%;">@item.SubjectName</td>
                                    <td style="width: 15%;">@item.FacultyName</td>
                                    <td style="width: 15%;">@item.FacultyContact</td>
                                    <td style="width: 12%;">@item.CreatedOn.ToShortDateString()</td>
                                    <td style="width: 12%;">
                                        <button type="button" onclick="DeleteClassSubjectFacultyPopup(@item.ClassSubjectFacultyTableId)" class="btn btn-danger adept-view" id="btnDelete@(counter)" data-toggle="modal" data-target="#myModal">Remove</button></td>
                                </tr>
                                counter++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
}

