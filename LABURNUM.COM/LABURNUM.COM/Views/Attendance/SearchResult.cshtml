@model List<DTO.LABURNUM.COM.CommonAttendanceModel>
@{int counter = 1;}
@if (Model.Count == 0)
{
    <div class="text-center">
        <img src="@LABURNUM.COM.Component.Constants.URL.WEBSITEURLWITHOUTSLASH/Images/no-record-found.png" />
    </div>
}
else
{
    <section class="panel">
        <header class="panel-heading">
            @*<strong>Number of Record Found : @Model.Count</strong>*@
            <span class="tools pull-right">
                <button type="button" onclick="DownloadRecord('Attendance Report');" class="btn btn-primary adept-view">Download <i class="fa fa-download" aria-hidden="true"></i></button>
            </span>
        </header>

        <div class="panel-body" id="divTable">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table class="table table-hover general-table responsive">
                        <thead>
                            <tr>
                                <th></th>
                                @foreach (DTO.LABURNUM.COM.CommonAttendanceModel item in @Model)
                                {
                                    <th>@item.Date.Day</th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (DTO.LABURNUM.COM.CommonAttendanceModel item in @Model)
                            {
                                <tr>
                                    <td style="width: 17%;">@item.StudentName</td>
                                    @foreach (DTO.LABURNUM.COM.CommonAttendanceModel item1 in @Model)
                                    { <td style="width: 17%;">@item.IsPresent</td>}
                                </tr>
                                    counter++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
}
