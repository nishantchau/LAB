@model List<DTO.LABURNUM.COM.AlbumModel>

<header class="secondary" id="head">
    <div class="container">
        <div class="row">
            <div class="col-sm-8">
                <h1>GALLERY</h1>
            </div>
        </div>
    </div>
</header>



@{int counter = 1;}

@if (Model.Count == 0)
{
    <section class="panel">
        <h3>GALLERY </h3>
        <div class="text-center">
            <img src="@LABURNUM.COM.Component.Constants.URL.WEBSITEURLWITHOUTSLASH/Images/no-record-found.png" />
        </div>
    </section>
}
else
{  
    <div class="row">
        <section class="container" style="background: white; padding: 15px; margin-top: 15px">
            <h3 style="text-align: center;">List Of Photo Gallery</h3>
            <div class="gallery">
                @foreach (DTO.LABURNUM.COM.AlbumModel item in @Model)
                {
                    <a class="gallery-item" href="@LABURNUM.COM.Component.Constants.URL.WEBSITEURLWITHOUTSLASH/Uploads/Album/@item.AlbumCoverImage" title="@item.AlbumName" style="text-align:center;" data-gallery>
                        <span>@item.AlbumName</span>
                        <div class="image">
                            <img src="@LABURNUM.COM.Component.Constants.URL.WEBSITEURLWITHOUTSLASH/Uploads/Album/@item.AlbumCoverImage" alt="@item.AlbumName" height="200" width="200"/>
                        </div>
                        <div style="width: 25%">
                            <a href="@LABURNUM.COM.Component.Constants.URL.WEBSITEURLWITHOUTSLASH/ListAllGallery/ViewByAlbumId?id=@(new LABURNUM.COM.Component.Crypto().EncryptStringAES(@item.AlbumId.ToString(), LABURNUM.COM.Component.Constants.KEYS.SHAREDKEY))" style="text-align:center;">
                                <strong>!!View more!!</strong></a>
                        </div>
                    </a>
                }
            </div>
        </section>
    </div>
}

