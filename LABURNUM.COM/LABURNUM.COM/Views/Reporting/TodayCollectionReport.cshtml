@model List<DTO.LABURNUM.COM.StudentFeeModel>
@{int counter = 1;}
<div class="row">
    <div class="col-md-12">
        <!--breadcrumbs start -->
        <ul class="breadcrumb">
            <li><a href="@LABURNUM.COM.Component.Constants.URL.WEBSITEURLWITHOUTSLASH/Dashboard/Index"><i class="fa fa-home"></i>Home</a></li>
            <li>Reporting</li>
            <li class="active">Today Collection</li>
        </ul>
        <!--breadcrumbs end -->
    </div>
</div>

@if (Model.Count == 0)
{
    <section class="panel">
        <div class="text-center">
            <img src="@LABURNUM.COM.Component.Constants.URL.WEBSITEURLWITHOUTSLASH/Images/no-record-found.png" />
        </div>
    </section>
}
else
{
    <section class="panel">
        <header class="panel-heading text-center">
            <strong>Today Collection From Admission / Re-admission</strong>
        </header>

        <header class="panel-heading">
            <strong>Number of Record Found : @Model.Count</strong>
            <span class="tools pull-right">
                <button type="button" onclick="DownloadRecord('Today Collection Report');" class="btn btn-primary adept-view">Download <i class="fa fa-download" aria-hidden="true"></i></button>
            </span>
        </header>

        <div class="panel-body" id="divTable">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table class="table table-hover general-table responsive">
                        <thead>
                            <tr>
                                <th>S.No.</th>
                                <th>Admission Type</th>
                                <th>Class Name</th>
                                <th>Section Name</th>
                                <th>Student Name</th>
                                <th>Paid Admission Fee</th>
                                <th>Discount Amount</th>
                                <th>Discount Remarks</th>
                                <th>Submission Date</th>
                                <th>Paid Monthly Fee</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (DTO.LABURNUM.COM.StudentFeeModel item in @Model)
                            {
                                <tr>
                                    <td style="width: 1%;">@counter</td>
                                    @if (item.AdmissionTypeId == DTO.LABURNUM.COM.Utility.AdmissionType.GetValue(DTO.LABURNUM.COM.Utility.EnumAdmissionType.NEWADMISSION))
                                    {<td>New Admission</td> }
                                    else
                                    {<td>Re-Admission</td> }
                                    <td style="width: 20%;">@item.ClassName</td>
                                    <td style="width: 23%;">@item.SectionName</td>
                                    <td style="width: 19%;">@item.StudentName</td>
                                    <td style="width: 19%;">@item.TotalPayableAmount</td>
                                    <td style="width: 19%;">@item.DiscountAmount</td>
                                    <td style="width: 19%;">@item.DiscountRemarks</td>
                                    <td>@item.CreatedOn.ToShortDateString()</td>
                                    <td>@item.PaidMonthlyFee</td>
                                </tr>
                                    counter++;
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="5" class="text-right"><b>Total From Admission</b></td>
                                <td><b>@Model[0].TotalEarningFromAdmission</b></td>
                                <td colspan="3" class="text-right"><b>Total From Monthly Fee</b></td>
                                <td><b>@Model[0].TotalEarningFromMonthlyFee</b></td>
                            </tr>
                            <tr>
                                <td colspan="9" class="text-right"><b>Grand Total</b></td>
                                <td><b>@Model[0].TotalEarning</b></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </section>
}

