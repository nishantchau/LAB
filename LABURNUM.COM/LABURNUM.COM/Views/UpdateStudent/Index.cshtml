                //TransPort Details
    <section class="panel">
        <header class="panel-heading">
            Transport Details <span class="tools pull-right">
                <a class="fa fa-chevron-down" href="javascript:;"></a>
            </span>
        </header>
        <div class="panel-body">
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-6 col-md-6 col-xs-12">
                        <div class="row">
                            <div class="col-md-7">
                                <span class="score_adept">Is Transport Required : </span>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    @Html.HiddenFor(x => x.IsTransportRqd, new { @id = "hdnTransportRqd" })
                                    <input type="checkbox" id="chkIsTransportRqd" onclick="ShowHideBusRoute()" />
                                </div>
