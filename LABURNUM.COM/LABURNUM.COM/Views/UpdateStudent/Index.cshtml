                        <div class="col-md-4">
                            <span class="score_adept">Last Name : </span>
                        </div>
                        <div class="col-md-7">
                            <div class="form-group">
                                @Html.TextBoxFor(x => x.LastName, new { @id = "txtLastName", @autocomplete = "Off", @class = "ToReset" })
