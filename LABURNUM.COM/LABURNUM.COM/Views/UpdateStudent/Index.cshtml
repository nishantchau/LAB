                //Residence Details
    <section class="panel">
        <header class="panel-heading">
            Residence Details <span class="tools pull-right">
                <a class="fa fa-chevron-down" href="javascript:;"></a>
            </span>
        </header>
        <div class="panel-body">
            <div class="row">
