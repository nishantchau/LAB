                    <div class="row">
                        <div class="col-md-4">
                            <span class="score_adept">Date Of Birth : </span>
                        </div>
                        <div class="col-md-7">
                            <div class="form-group">
                                @Html.TextBoxFor(x => x.DOB, new { @autocomplete = "off", @id = "datepicker" })
                            </div>
                        </div>
                    </div>
                </div>
