                        <div class="col-md-4">
                            <span class="score_adept">Student's Adhar No. : </span>
                        </div>
                        <div class="col-md-7">
                            <div class="form-group">
                                @Html.TextBoxFor(x => x.StudentAadharNumber, new { @id = "txtStudentAdharNo", @autocomplete = "Off", @class = "ToReset" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                @if (File.Exists(Server.MapPath("~/Uploads/ProfileImages/" + @Model.StudentPhoto)))
                {
                    if (Model.StudentPhoto != null && Model.StudentPhoto != "")
                    {
                    <img src="@LABURNUM.COM.Component.Constants.URL.WEBSITEURLWITHOUTSLASH/Uploads/ProfileImages/@Model.StudentPhoto" class="upload-profilepic" alt="Profile Image" />
                    }
                }
                else
                {
                    <img src="@LABURNUM.COM.Component.Constants.URL.WEBSITEURLWITHOUTSLASH/Images/dummy.jpg" class="upload-profilepic" alt="Profile Image" />
                }

                <input type="file" id="fileUpload" style="width: 200px" onclick="UploadImage();" />
                @Html.HiddenFor(x => x.StudentPhoto, new { @id = "hdnStudentPhoto", @autocomplete = "Off", @class = "ToReset" })
                <div id="file_name" style="display: none;"></div>
                <div id="divImageUploadStatus" style="display: none;"></div>
                <div id="divPhotoName" style="display: none;">@Model.AdmissionNumber</div>
            </div>
        </div>
    </section>
    
    
