@model DTO.LABURNUM.COM.ClassSubjectFacultyTableModel

@if (new LABURNUM.COM.Component.SessionManagement().GetLoginBy() == DTO.LABURNUM.COM.Utility.UserType.GetValue(DTO.LABURNUM.COM.Utility.EnumUserType.ADMIN) || new LABURNUM.COM.Component.SessionManagement().GetLoginBy() == DTO.LABURNUM.COM.Utility.UserType.GetValue(DTO.LABURNUM.COM.Utility.EnumUserType.PRINCIPLE))
{

    using (Ajax.BeginForm(new AjaxOptions { OnBegin = "OnDeleteClassSubjectFacultyBegin", OnSuccess = "OnDeleteClassSubjectFacultySuccess", Url = @LABURNUM.COM.Component.Constants.URL.WEBSITEURL + "ClassSubjectWiseFaculty/UpdateClassSubjectWiseFacultyStatus" }))
    {@Html.HiddenFor(x => x.ClassSubjectFacultyTableId)
    <div class="modal-dialog modal-dialogadept modal-dialogadept-mini" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">
                        <img src="@LABURNUM.COM.Component.Constants.URL.WEBSITEURLWITHOUTSLASH/Images/button-close.png" /></span>
                </button>
                <h4 class="modal-title" id="myModalLabel">Delete</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12 text-center">
                        Are you Really want to Remove This teacher from this class ?
                    </div>
                    <div class="col-md-12 text-center margin_top">
                        <button id="btnSubmit" type="submit" class="btn btn-default btn-adeptsubmit btn-danger">Delete</button>
                        <button type="button" id="btnClose" class="btn btn-default btn-adeptsubmit btn-success" data-dismiss="modal" aria-label="Close">Close</button>
                    </div>
                    <div id="divPopupLoader" class="col-md-12 display_none text-center margin_small">
                        <img src="@LABURNUM.COM.Component.Constants.URL.WEBSITEURLWITHOUTSLASH/Images/loader.gif" />
                    </div>
                    <div id="divPopupMessage" class="display_none text-center margin_small col-md-12"></div>
                </div>
            </div>
        </div>
    </div>
    }
}
else
{
    <div class="modal-dialog modal-dialogadept modal-dialogadept-mini" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">
                        <img src="@LABURNUM.COM.Component.Constants.URL.WEBSITEURLWITHOUTSLASH/Images/button-close.png" /></span>
                </button>
                <h4 class="modal-title">@(LABURNUM.COM.Component.Constants.ERRORMESSAGES.ACCESS_DENIED)</h4>
            </div>
        </div>
    </div>
}