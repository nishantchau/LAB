@model List<DTO.LABURNUM.COM.CircularModel>

<header class="secondary" id="head">
    <div class="container">
        <div class="row">
            <div class="col-sm-8">
                <h1>SCHOOL CIRCULAR(S)</h1>
            </div>
        </div>
    </div>
</header>



@{int counter = 1;}

@if (Model.Count == 0)
{
     
    <section class="panel">
        <h3>List Of Circulars in 2017-18</h3>
        <div class="text-center">
            <img src="@LABURNUM.COM.Component.Constants.URL.WEBSITEURLWITHOUTSLASH/Images/no-record-found.png" />
        </div>
    </section>
}
else
{  
    <div class="row">
        <section class="container" style="background: white; padding: 15px; margin-top: 15px">
            <h3 style="text-align: center;">List Of Circulars in 2017-2018</h3>
           
                <div class="col-md-12">
                    <table class="table table-hover general-table responsive">
                        <thead style="background: green; color: white;">
                            <tr>
                                <th>S.No.</th>
                                <th>Circular Date</th>
                                <th>Circular Subject</th>
                                <th>Details</th>
                            </tr>
                        </thead>
                        <tbody>
                           @foreach (DTO.LABURNUM.COM.CircularModel item in @Model)
            {
                                <tr>
                                    <td style="width: 17%;">@counter</td>
                                    <td style="width: 20%;">@item.PublishedOn.Day-@item.PublishedOn.Month-@item.PublishedOn.Year</td>
                                    <td style="width: 20%;">@item.Subject</td>
                                      @if (item.Attachment != null && item.Attachment != "")
                                    {
                                        <td style="width: 23%;"><a href="@LABURNUM.COM.Component.Constants.URL.WEBSITEURLWITHOUTSLASH/Uploads/Circulars/@item.Attachment" target="_blank"><strong>Click Here To See Details</strong> </a></td>
                                    }
                                    else
                                    {
                                        <td style="width: 23%;">-</td>
                                    }
                                </tr>
                                counter++;
                            }
                        </tbody>
                    </table>
                </div>
        </section>
    </div>
}


